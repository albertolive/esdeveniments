{
  "parser": "@typescript-eslint/parser",
  "extends": [
    "eslint:recommended",
    "next",
    "next/core-web-vitals",
    "plugin:@typescript-eslint/recommended"
  ],
  "plugins": ["@typescript-eslint"],
  "rules": {
    "no-unused-vars": "off",
    "@typescript-eslint/no-unused-vars": "warn",
    "no-undef": "error",
    "no-debugger": "error"
  },
  "env": {
    "es6": true,
    "browser": true,
    "node": true
  }
}
